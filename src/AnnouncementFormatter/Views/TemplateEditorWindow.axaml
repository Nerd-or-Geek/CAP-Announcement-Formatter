<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AnnouncementFormatter.ViewModels"
        xmlns:controls="using:AnnouncementFormatter.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
        x:Class="AnnouncementFormatter.Views.TemplateEditorWindow"
        x:DataType="vm:TemplateEditorViewModel"
        Title="Edit Template"
        Width="1000" Height="700"
        WindowStartupLocation="CenterOwner">
    
    <Design.DataContext>
        <vm:TemplateEditorViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto" Margin="15">
        <!-- Header -->
        <Border Grid.Row="0" Background="#001489" Padding="15,10" CornerRadius="4" Margin="0,0,0,15">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Template Editor" FontSize="18" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="{Binding Widget.DisplayName, StringFormat='Widget: {0}'}" 
                               FontSize="12" Foreground="#E0E0E0" Margin="0,4,0,0"/>
                </StackPanel>
                <TextBlock Grid.Column="1" Text="âœŽ Edit HTML Template" FontSize="12" Foreground="#FFCD00" VerticalAlignment="Center"/>
            </Grid>
        </Border>
        
        <!-- Main Content: Split Editor and Preview -->
        <Grid Grid.Row="1" ColumnDefinitions="*,1,*" Margin="0,0,0,15">
            <!-- Left: HTML Editor -->
            <Border Grid.Column="0" Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="1" CornerRadius="4" Padding="15">
                <Grid RowDefinitions="Auto,*">
                    <TextBlock Grid.Row="0" Text="HTML Template Code" FontSize="12" FontWeight="Bold" 
                               Foreground="#001489" Margin="0,0,0,10"/>
                    <TextBox Grid.Row="1" 
                             Text="{Binding TemplateContent}" 
                             AcceptsReturn="True"
                             FontFamily="Consolas"
                             FontSize="11"
                             Foreground="#333"
                             Background="White"
                             Padding="10"
                             BorderBrush="#CED4DA"
                             BorderThickness="1"
                             Watermark="Enter HTML template code..."/>
                </Grid>
            </Border>

            <!-- Separator -->
            <Border Grid.Column="1" Background="#DEE2E6" Margin="7,0"/>

            <!-- Right: Live Preview -->
            <Border Grid.Column="2" Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="1" CornerRadius="4" Padding="15">
                <Grid RowDefinitions="Auto,*">
                    <StackPanel Grid.Row="0" Spacing="10">
                        <TextBlock Text="Live Preview" FontSize="12" FontWeight="Bold" 
                                   Foreground="#001489"/>
                        <TextBlock Text="Updates automatically as you type" FontSize="10" 
                                   Foreground="#6C757D" Margin="0,-5,0,0"/>
                    </StackPanel>
                    
                    <controls:HtmlPreviewControl x:Name="HtmlPreview" Grid.Row="1" Margin="0,10,0,0" />
                </Grid>
            </Border>
        </Grid>

        <!-- Footer: Buttons -->
        <Border Grid.Row="2" Background="#f5f5f5" BorderBrush="#e0e0e0" BorderThickness="0,1,0,0" Padding="15">
            <Grid ColumnDefinitions="*,Auto,Auto">
                <TextBlock Grid.Column="0" Text="Save changes to update widget template" 
                           FontSize="11" Foreground="#666" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Button Grid.Column="1" Content="Cancel" Click="OnCancelClicked"
                        Background="#95A5A6" Foreground="White" Padding="20,8" 
                        FontSize="12" CornerRadius="4" Margin="0,0,10,0"/>
                <Button Grid.Column="2" Content="Save Template" Command="{Binding SaveTemplateCommand}"
                        Background="#27AE60" Foreground="White" Padding="20,8" 
                        FontSize="12" CornerRadius="4" FontWeight="Bold"/>
            </Grid>
        </Border>
    </Grid>
</Window>
