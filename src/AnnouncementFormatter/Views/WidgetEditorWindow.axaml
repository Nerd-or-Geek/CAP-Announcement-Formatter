<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AnnouncementFormatter.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
        x:Class="AnnouncementFormatter.Views.WidgetEditorWindow"
        x:DataType="vm:WidgetEditorViewModel"
        Title="Create New Widget"
        Width="900" Height="700"
        WindowStartupLocation="CenterOwner">
    
    <Grid RowDefinitions="Auto,*,Auto" Margin="15">
        <!-- Header -->
        <Border Grid.Row="0" Background="#001489" Padding="15,10" CornerRadius="4" Margin="0,0,0,15">
            <TextBlock Text="Widget Designer" FontSize="18" FontWeight="Bold" Foreground="White"/>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" ColumnDefinitions="*,15,*">
            <!-- Left: Widget Definition -->
            <Border Grid.Column="0" Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="1" CornerRadius="4" Padding="15">
                <ScrollViewer>
                    <StackPanel Spacing="15">
                        <TextBlock Text="Widget Information" FontSize="14" FontWeight="Bold" Foreground="#001489"/>
                        
                        <StackPanel Spacing="5">
                            <TextBlock Text="Widget ID*" FontWeight="SemiBold" FontSize="12"/>
                            <TextBox Text="{Binding WidgetId}" Watermark="e.g., custom_widget"/>
                        </StackPanel>
                        
                        <StackPanel Spacing="5">
                            <TextBlock Text="Display Name*" FontWeight="SemiBold" FontSize="12"/>
                            <TextBox Text="{Binding DisplayName}" Watermark="e.g., Custom Widget"/>
                        </StackPanel>
                        
                        <StackPanel Spacing="5">
                            <TextBlock Text="Category*" FontWeight="SemiBold" FontSize="12"/>
                            <TextBox Text="{Binding Category}" Watermark="e.g., Custom"/>
                        </StackPanel>
                        
                        <StackPanel Spacing="5">
                            <TextBlock Text="Description" FontWeight="SemiBold" FontSize="12"/>
                            <TextBox Text="{Binding Description}" Watermark="Brief description" AcceptsReturn="True" Height="60"/>
                        </StackPanel>
                        
                        <Separator Background="#DEE2E6" Margin="0,10"/>
                        
                        <TextBlock Text="Widget Colors" FontSize="14" FontWeight="Bold" Foreground="#001489"/>
                        <TextBlock Text="Customize the color scheme for this widget type" 
                                   FontSize="11" Foreground="#6C757D" TextWrapping="Wrap"/>
                        
                        <Grid ColumnDefinitions="*,10,*" RowDefinitions="Auto,10,Auto">
                            <StackPanel Grid.Column="0" Grid.Row="0" Spacing="5">
                                <TextBlock Text="Primary Color" FontWeight="SemiBold" FontSize="11"/>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <Border Background="{Binding PrimaryColor}" Width="40" Height="30" BorderBrush="#CED4DA" BorderThickness="1" CornerRadius="3"/>
                                    <TextBox Text="{Binding PrimaryColor}" Watermark="#001489" Width="100" FontFamily="Consolas" FontSize="11"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" Grid.Row="0" Spacing="5">
                                <TextBlock Text="Accent Color" FontWeight="SemiBold" FontSize="11"/>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <Border Background="{Binding AccentColor}" Width="40" Height="30" BorderBrush="#CED4DA" BorderThickness="1" CornerRadius="3"/>
                                    <TextBox Text="{Binding AccentColor}" Watermark="#FFCD00" Width="100" FontFamily="Consolas" FontSize="11"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="0" Grid.Row="2" Spacing="5">
                                <TextBlock Text="Background Color" FontWeight="SemiBold" FontSize="11"/>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <Border Background="{Binding BackgroundColor}" Width="40" Height="30" BorderBrush="#CED4DA" BorderThickness="1" CornerRadius="3"/>
                                    <TextBox Text="{Binding BackgroundColor}" Watermark="#FFFFFF" Width="100" FontFamily="Consolas" FontSize="11"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" Grid.Row="2" Spacing="5">
                                <TextBlock Text="Text Color" FontWeight="SemiBold" FontSize="11"/>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <Border Background="{Binding TextColor}" Width="40" Height="30" BorderBrush="#CED4DA" BorderThickness="1" CornerRadius="3"/>
                                    <TextBox Text="{Binding TextColor}" Watermark="#333333" Width="100" FontFamily="Consolas" FontSize="11"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                        
                        <Separator Background="#DEE2E6" Margin="0,10"/>
                        
                        <TextBlock Text="HTML Template" FontSize="14" FontWeight="Bold" Foreground="#001489"/>
                        <TextBlock Text="Use {{fieldId}} for variables. Include inline CSS for styling." 
                                   FontSize="11" Foreground="#6C757D" TextWrapping="Wrap"/>
                        
                        <TextBox Text="{Binding HtmlTemplate}" 
                                 AcceptsReturn="True" 
                                 TextWrapping="Wrap"
                                 FontFamily="Consolas"
                                 FontSize="11"
                                 Height="250"
                                 Watermark="&lt;div style=&quot;border: 2px solid #001489; padding: 15px;&quot;&gt;&#x0a;  &lt;h3 style=&quot;color: #001489;&quot;&gt;{{title}}&lt;/h3&gt;&#x0a;  &lt;p&gt;{{content}}&lt;/p&gt;&#x0a;&lt;/div&gt;"/>
                        
                        <Separator Background="#DEE2E6" Margin="0,10"/>
                        
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="Fields" FontSize="14" FontWeight="Bold" Foreground="#001489" VerticalAlignment="Center"/>
                            <Button Content="+ Add Field" Command="{Binding AddFieldCommand}" 
                                    Background="#27AE60" Foreground="White" Padding="10,5" CornerRadius="3"/>
                        </StackPanel>
                        
                        <ItemsControl ItemsSource="{Binding Fields}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" BorderBrush="#CED4DA" BorderThickness="1" 
                                            CornerRadius="4" Padding="10" Margin="0,0,0,8">
                                        <Grid RowDefinitions="Auto,8,Auto,8,Auto" ColumnDefinitions="*,Auto">
                                            <StackPanel Grid.Row="0" Grid.Column="0" Spacing="3">
                                                <TextBlock Text="Field ID*" FontSize="10" Foreground="#6C757D"/>
                                                <TextBox Text="{Binding Id}" FontSize="11" Watermark="e.g., title"/>
                                            </StackPanel>
                                            
                                            <Button Grid.Row="0" Grid.Column="1" Content="âœ•" 
                                                    Command="{Binding $parent[Window].((vm:WidgetEditorViewModel)DataContext).RemoveFieldCommand}"
                                                    CommandParameter="{Binding}"
                                                    Background="#E74C3C" Foreground="White" 
                                                    Width="24" Height="24" FontSize="10" Padding="0" CornerRadius="3"/>
                                            
                                            <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Spacing="3">
                                                <TextBlock Text="Label*" FontSize="10" Foreground="#6C757D"/>
                                                <TextBox Text="{Binding Label}" FontSize="11" Watermark="e.g., Title"/>
                                            </StackPanel>
                                            
                                            <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" ColumnDefinitions="*,8,*">
                                                <StackPanel Grid.Column="0" Spacing="3">
                                                    <TextBlock Text="Type" FontSize="10" Foreground="#6C757D"/>
                                                    <ComboBox SelectedItem="{Binding Type}" FontSize="11">
                                                        <ComboBoxItem Content="String"/>
                                                        <ComboBoxItem Content="Multiline"/>
                                                        <ComboBoxItem Content="Date"/>
                                                        <ComboBoxItem Content="Dropdown"/>
                                                    </ComboBox>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="2" Spacing="3">
                                                    <TextBlock Text="Default Value" FontSize="10" Foreground="#6C757D"/>
                                                    <TextBox Text="{Binding DefaultValue}" FontSize="11"/>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            
            <!-- Right: Live Preview -->
            <Border Grid.Column="2" Background="White" BorderBrush="#DEE2E6" BorderThickness="1" CornerRadius="4" Padding="15">
                <StackPanel Spacing="10">
                    <TextBlock Text="Live Preview" FontSize="14" FontWeight="Bold" Foreground="#001489"/>
                    <TextBlock Text="This shows how your widget will render:" FontSize="11" Foreground="#6C757D"/>
                    
                    <Button Content="ðŸ”„ Refresh Preview" Command="{Binding RefreshPreviewCommand}"
                            Background="#3498DB" Foreground="White" Padding="10,8" CornerRadius="4" HorizontalAlignment="Left"/>
                    
                    <ScrollViewer Height="550">
                        <Panel>
                            <!-- HTML Preview rendering -->
                            <Border x:Name="HtmlPreviewContainer" Background="White" BorderBrush="#CED4DA" BorderThickness="1" CornerRadius="4" Padding="15">
                                <!-- This will be populated with rendered HTML -->
                            </Border>
                        </Panel>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" BorderBrush="#DEE2E6" BorderThickness="0,1,0,0" Padding="0,15,0,0" Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                <Button Content="Cancel" Click="OnCancelClicked"
                        Background="#95A5A6" Foreground="White" Padding="20,10" CornerRadius="4"/>
                <Button Content="Save Widget" Click="OnSaveClicked"
                        Background="#27AE60" Foreground="White" Padding="20,10" CornerRadius="4" FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
